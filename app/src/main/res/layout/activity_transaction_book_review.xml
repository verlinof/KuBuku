<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransactionBookReview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/rounded_bottom_bg"
            android:padding="30dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/ic_back_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/sf_ui_text_bold"
                android:text="Terimakasih telah menjaga bukumu dengan baik .."
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/payment_step_eight"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="15dp"
            android:paddingHorizontal="20dp"
            >

            <TextView
                android:id="@+id/tvReviewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terimakasih telah mengembalikan buku tepat waktu, jangan lupa untuk mereview buku yang telah dibaca"
                android:textAlignment="center"
                android:fontFamily="@font/sf_ui_text_bold"
                android:textSize="12dp"
                android:layout_centerHorizontal="true"
                />

            <RelativeLayout
                android:id="@+id/cardReviewBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvReviewTitle"
                android:padding="10dp"
                >

                <ImageView
                    android:id="@+id/ivBookImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/img_book_bumi" />

                <TextView
                    android:id="@+id/tvBookTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bumi"
                    android:fontFamily="@font/sf_ui_text_bold"
                    android:layout_toRightOf="@+id/ivBookImage"
                    android:layout_marginTop="15dp"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/tvBookAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="by Tere Liye"
                    android:fontFamily="@font/sf_ui_text_regular"
                    android:layout_toRightOf="@+id/ivBookImage"
                    android:layout_below="@id/tvBookTitle"
                    android:textSize="10sp"
                    android:textColor="@color/grey"
                    />

                <ImageView
                    android:id="@+id/ivStar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_star_white"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@id/ivBookImage"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivStar"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/rounded_border_black"
                    android:hint="Tulis Komentarmu di Sini"
                    android:textSize="10sp"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/cardReviewBundle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardReviewBook"
                android:padding="10dp"
                >

                <ImageView
                    android:id="@+id/ivBundleImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/img_bundle_bumi" />

                <TextView
                    android:id="@+id/tvBundleTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bumi Series #1"
                    android:fontFamily="@font/sf_ui_text_bold"
                    android:layout_toRightOf="@+id/ivBundleImage"
                    android:layout_marginTop="15dp"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/tvBundleAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="by Tere Liye"
                    android:fontFamily="@font/sf_ui_text_regular"
                    android:layout_toRightOf="@+id/ivBundleImage"
                    android:layout_below="@id/tvBundleTitle"
                    android:textSize="10sp"
                    android:textColor="@color/grey"
                    />

                <ImageView
                    android:id="@+id/ivStarBundle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_star_white"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@id/ivBundleImage"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivStarBundle"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/rounded_border_black"
                    android:hint="Tulis Komentarmu di Sini"
                    android:textSize="10sp"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    />

            </RelativeLayout>

            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/bg_secondary"
                android:fontFamily="@font/sf_ui_text_bold"
                android:paddingVertical="12dp"
                android:text="Konfirmasi"
                android:textColor="@color/white"
                android:textSize="17dp"
                />

        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>