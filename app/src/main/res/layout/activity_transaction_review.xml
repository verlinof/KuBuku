<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransactionReview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/rounded_bottom_bg"
            android:padding="30dp"
            >

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_24"
                android:clickable="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Periksa kembali buku yang ingin kamu pinjam .."
                android:fontFamily="@font/sf_ui_text_bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/payment_step_two"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:gravity="center"
            >

        <RelativeLayout
            android:id="@+id/BookSelected"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border_black"
            android:padding="20dp"
            >

                <ImageView
                    android:id="@+id/ivBookImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/img_book_bumi"
                    android:layout_marginRight="10dp"
                    />

                <TextView
                    android:id="@+id/tvBookTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bumi"
                    android:fontFamily="@font/sf_ui_text_bold"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/ivBookImage"
                    />

                <ImageView
                    android:id="@+id/ivDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delete"
                    android:layout_alignParentEnd="true"
                    />

                <TextView
                    android:id="@+id/tvTotalItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah: 1"
                    android:layout_toRightOf="@+id/ivBookImage"
                    android:layout_below="@+id/tvBookTitle"
                    android:fontFamily="@font/sf_ui_text_regular"
                    android:textColor="@color/grey"
                    android:textSize="11sp"
                    />

                <TextView
                    android:id="@+id/tvPeriod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Periode: Harian (28-29 Feb 2024)"
                    android:layout_toRightOf="@+id/ivBookImage"
                    android:layout_below="@+id/tvTotalItem"
                    android:fontFamily="@font/sf_ui_text_regular"
                    android:textColor="@color/grey"
                    android:textSize="11sp"
                    />

                <TextView
                    android:id="@+id/tvBookPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp5.000,00"
                    android:fontFamily="@font/sf_ui_text_bold"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@+id/tvPeriod"
                    />

                <ImageView
                    android:id="@+id/ivBundleImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/img_bundle_bumi"
                    android:layout_below="@+id/ivBookImage"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    />

                <TextView
                    android:id="@+id/tvBundleTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bumi Series #1"
                    android:fontFamily="@font/sf_ui_text_bold"
                    android:layout_toRightOf="@+id/ivBundleImage"
                    android:layout_alignTop="@+id/ivBundleImage"
                    />

                <TextView
                    android:id="@+id/tvTotalBundle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvBundleTitle"
                    android:layout_toRightOf="@id/ivBundleImage"
                    android:text="Jumlah: 1"
                    android:fontFamily="@font/sf_ui_text_regular"
                    android:textColor="@color/grey"
                    android:textSize="11sp"
                    />

                <TextView
                    android:id="@+id/tvBundlePeriod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Periode: Harian (28-29 Feb 2024)"
                    android:layout_toRightOf="@+id/ivBundleImage"
                    android:layout_below="@+id/tvTotalBundle"
                    android:fontFamily="@font/sf_ui_text_regular"
                    android:textColor="@color/grey"
                    android:textSize="11sp"
                    />

                <ImageView
                    android:id="@+id/ivDeleteBundle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delete"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@id/ivBundleImage"
                    />

                <TextView
                    android:id="@+id/tvBundlePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp25.000,00"
                    android:fontFamily="@font/sf_ui_text_bold"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@+id/tvBundlePeriod"
                    />

                <ImageView
                    android:id="@+id/ivDevider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/devider_payment"
                    android:layout_below="@id/tvBundlePrice"
                    android:layout_marginVertical="15dp"
                    />

                <TextView
                    android:id="@+id/tvSubtotalTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ivDevider"
                    android:text="Subtotal"
                    android:fontFamily="@font/sf_ui_text_regular"
                    />

                <TextView
                    android:id="@+id/tvSubtotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tvSubtotalTitle"
                    android:text="Rp30.000,00"
                    android:fontFamily="@font/sf_ui_text_bold"
                    android:layout_alignParentEnd="true"
                    />

                <TextView
                    android:id="@+id/tvDeliveryTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvSubtotalTitle"
                    android:text="Delivery"
                    android:fontFamily="@font/sf_ui_text_regular"
                    />

                <TextView
                    android:id="@+id/tvDeliveryPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp15.000,00"
                    android:fontFamily="@font/sf_ui_text_bold"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@+id/tvDeliveryTitle"
                    />

                <TextView
                    android:id="@+id/tvTaxTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDeliveryTitle"
                    android:text="Tax"
                    android:fontFamily="@font/sf_ui_text_regular"
                    />

                <TextView
                    android:id="@+id/tvTaxPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp2.000,00"
                    android:fontFamily="@font/sf_ui_text_bold"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@+id/tvTaxTitle"
                    />

                <ImageView
                    android:id="@+id/ivDeviderTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/devider_payment"
                    android:layout_below="@id/tvTaxPrice"
                    android:layout_marginVertical="15dp"
                    />

                <TextView
                    android:id="@+id/tvTotalTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivDeviderTwo"
                    android:text="Total"
                    android:fontFamily="@font/sf_ui_text_regular"
                    />

                <TextView
                    android:id="@+id/tvTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp47.000,00"
                    android:fontFamily="@font/sf_ui_text_bold"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@+id/tvTotalTitle"
                    />

            </RelativeLayout>

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/bg_secondary"
            android:fontFamily="@font/sf_ui_text_bold"
            android:paddingVertical="12dp"
            android:text="Konfirmasi"
            android:textColor="@color/white"
            android:textSize="17dp" />

        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>