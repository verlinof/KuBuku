<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    android:paddingVertical="20dp"
    >

    <ProgressBar
        android:id="@+id/loadingBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:elevation="10dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        >

        <ImageView
            android:id="@+id/ivLogoHorizontal"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:src="@drawable/kubuku_logo_horizontal"
            />

        <LinearLayout
            android:id="@+id/llContainerForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            >


            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_border_edittext"
                android:drawableLeft="@drawable/ic_email"
                android:hint="Email"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:layout_marginTop="28dp"
                android:inputType="textEmailAddress"
                android:selectAllOnFocus="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textSize="15dp"
                android:fontFamily="@font/sf_ui_text_regular"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_border_edittext"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                >

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="40dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/sf_ui_text_regular"
                    android:drawableLeft="@drawable/ic_password"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:selectAllOnFocus="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textSize="15dp"
                    />

                <ImageView
                    android:id="@+id/btnHideUnhide"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:src="@drawable/ic_hide_unhide" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/btnForgotPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/sf_ui_text_regular"
                    android:paddingVertical="15dp"
                    android:text="Lupa Password?"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:clickable="true"
                    />

                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="12dp"
                    android:backgroundTint="@color/bg_secondary"
                    android:fontFamily="@font/sf_ui_text_bold"
                    android:layout_below="@id/btnForgotPassword"
                    android:text="Masuk"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="25dp"
                android:drawableLeft="@drawable/or_devider"
                android:drawablePadding="8dp"
                android:text="Atau"
                android:textAlignment="center"
                android:fontFamily="@font/sf_ui_text_bold"
                android:textSize="17sp"
                android:drawableRight="@drawable/or_devider"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnLoginWithGoogle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="20dp"
                    android:layout_marginBottom="20dp"
                    android:drawableLeft="@drawable/ic_google"
                    android:text="Masuk dengan Google"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:background="@drawable/border_primary"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnLoginWithFacebook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="20dp"
                    android:layout_below="@id/btnLoginWithGoogle"
                    android:drawableLeft="@drawable/ic_facebook"
                    android:text="Masuk dengan Facebook"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:background="@drawable/border_primary"
                    />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tvDontHaveAccount"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_ui_text_regular"
                    android:text="Belum punya akun?"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/btnRegister"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_ui_text_bold"
                    android:paddingHorizontal="0dp"
                    android:paddingVertical="0dp"
                    android:text="Daftar"
                    android:textColor="#000000"
                    android:textSize="15dp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>