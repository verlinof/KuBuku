<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.RegisterActivity"
    android:paddingHorizontal="20dp"
    android:paddingVertical="35dp"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/kubuku_logo_horizontal" />

            <LinearLayout
                android:id="@+id/llContainerForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="50dp"
                android:orientation="vertical"
                >


                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/rounded_bg_edittext"
                    android:drawableLeft="@drawable/ic_email"
                    android:hint="Email"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="10dp"
                    android:layout_marginBottom="16dp"
                    android:inputType="textEmailAddress"
                    android:selectAllOnFocus="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textSize="15dp"
                    android:fontFamily="@font/sf_ui_text_regular"
                    />

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_bg_edittext"
                    android:drawableLeft="@drawable/ic_phone"
                    android:fontFamily="@font/sf_ui_text_regular"
                    android:hint="Nomor Telepon"
                    android:inputType="phone"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:selectAllOnFocus="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_bg_edittext"
                    android:drawableLeft="@drawable/ic_name"
                    android:fontFamily="@font/sf_ui_text_regular"
                    android:hint="Nama"
                    android:inputType="text|textPersonName"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:selectAllOnFocus="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textSize="15dp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_bg_edittext"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    >
                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="40dp"
                        android:drawableLeft="@drawable/password_icon"
                        android:enabled="false"
                        android:fontFamily="@font/sf_ui_text_regular"
                        android:hint="Password"
                        android:inputType="text|textPassword"
                        android:background="@null"
                        android:selectAllOnFocus="true"
                        android:singleLine="true"
                        android:textSize="15dp" />
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:clickable="true"
                        android:layout_toLeftOf="@id/etPassword"
                        android:src="@drawable/ic_hide_unhide"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_bg_edittext"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:orientation="horizontal"
                    >
                    <EditText
                        android:id="@+id/etConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="40dp"
                        android:drawableLeft="@drawable/password_icon"
                        android:enabled="false"
                        android:fontFamily="@font/sf_ui_text_regular"
                        android:hint="Konfirmasi Password"
                        android:inputType="text|textPassword"
                        android:background="@null"
                        android:selectAllOnFocus="true"
                        android:singleLine="true"
                        android:textSize="15dp" />
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:clickable="true"
                        android:src="@drawable/ic_hide_unhide"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true" />
                </RelativeLayout>

                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="12dp"
                    android:backgroundTint="@color/bg_secondary"
                    android:fontFamily="@font/sf_ui_text_bold"
                    android:text="Daftar"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="25dp"
                    android:drawableLeft="@drawable/or_devider"
                    android:drawablePadding="8dp"
                    android:text="Atau"
                    android:textAlignment="center"
                    android:fontFamily="@font/sf_ui_text_bold"
                    android:textSize="17sp"
                    android:drawableRight="@drawable/or_devider"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnLoginWithGoogle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="20dp"
                        android:layout_marginBottom="20dp"
                        android:drawableLeft="@drawable/ic_google"
                        android:text="Masuk dengan Google"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:background="@drawable/border_primary"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnLoginWithFacebook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="20dp"
                        android:layout_below="@id/btnLoginWithGoogle"
                        android:drawableLeft="@drawable/ic_facebook"
                        android:text="Masuk dengan Facebook"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:background="@drawable/border_primary"
                        />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tvDontHaveAccount"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_ui_text_regular"
                        android:text="Sudah punya akun?"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/btnLogin"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_ui_text_bold"
                        android:paddingHorizontal="0dp"
                        android:paddingVertical="0dp"
                        android:text="Masuk"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>