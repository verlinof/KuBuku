<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransactionFinish">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/rounded_bottom_bg"
            android:padding="30dp"
            >

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_24"
                android:clickable="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terimakasih atas penilaiannya, jangan bosan untuk membaca buku, sampai jumpaa .."
                android:fontFamily="@font/sf_ui_text_bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/payment_step_nine"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/ivFinishIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_finish"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Terimakasih telah menilai dan berpendapat mengenai buku yang kamu pinjam"
                android:layout_below="@+id/ivFinishIcon"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/sf_ui_text_regular"
                android:layout_marginTop="20dp"
                />

            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/bg_secondary"
                android:fontFamily="@font/sf_ui_text_bold"
                android:layout_alignParentBottom="true"
                android:paddingVertical="12dp"
                android:text="Konfirmasi"
                android:textColor="@color/white"
                android:textSize="17dp" />

        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>