<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivSliderImage"
        android:layout_width="match_parent"
        android:layout_height="312dp"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/tvSliderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivSliderImage"
        android:layout_marginVertical="15dp"
        android:text="Sub Judul"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/tvSliderDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSliderTitle"
        android:text="Masih bingung nyari tempat sewa buku yang wort it dan lengkap? KUBUKU Jawabannya"
        android:textAlignment="center"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:textSize="14sp"
        />

</RelativeLayout>